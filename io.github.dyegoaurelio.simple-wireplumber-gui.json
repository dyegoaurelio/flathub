{
  "app-id": "io.github.dyegoaurelio.simple-wireplumber-gui",
  "runtime": "org.gnome.Platform",
  "runtime-version": "44",
  "sdk": "org.gnome.Sdk",
  "command": "simple-wireplumber-gui",
  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=ipc",
    "--filesystem=xdg-run/pipewire-0",
    "--filesystem=~/.config/simple-wireplumber-gui/",
    "--filesystem=~/.config/wireplumber/"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "simple-wireplumber-gui",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/dyegoaurelio/simple-wireplumber-gui/",
          "tag": "0.1",
          "commit": "e78c54f935c8aac3b82841059ac37cfd4685521c"
        }
      ]
    }
  ]
}
